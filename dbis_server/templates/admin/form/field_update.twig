                               value="3"
                               {% if resourceLocal.overwrite.is_still_updated == 3 %}
                                   checked
                               {% endif %}
                               >
                        <label for="is_still_updated_yes_local" class="mr-2">
                            {{ i18n.lbl_database_still_updated_yes }}
                        </label>
                        <input id="is_still_updated_no_local"
                               name="is_still_updated_local"
                               type="radio"
                               value="2"
                               {% if resourceLocal.overwrite.is_still_updated == 2 %}
                                   checked
                               {% endif %}
                               >
                        <label for="is_still_updated_no_local" class="mr-2">
                            {{ i18n.lbl_database_still_updated_no }}
                        </label>
                        <input id="is_still_updated_unknown_local"
                               name="is_still_updated_local"
                               type="radio"
                               value="1"
                               {% if resourceLocal.overwrite.is_still_updated == 1 %}
                                   checked
                               {% endif %}
                               >
                        <label for="is_still_updated_unknown_local" class="mr-2">
