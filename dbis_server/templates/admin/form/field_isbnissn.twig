{% if not resourceLocal.overwrite.isbn_issn is empty and resourceLocal.overwrite.isbn_issn|length > 0 %}
    {% set isLocalized = true %}
{% else %}
    {% set isLocalized = false %}
{% endif %}

<div class="level mb-2">
    <h3 class="title is-3 mb-2">{{ i18n.lbl_isbnissn }}</h3>
    {%  if selectedOrganization.ubrId is not empty %}
    <div class="tags has-addons is-clickable is-unselectable localization-tag" data-id="field-isbnissn">
        {% if resourceLocal.overwrite.isbn_issn is empty and resourceLocal.overwrite.isbn_issn|length < 1 %}
            <span class="tag global-tag">{{ i18n.lbl_change_to_local }}</span><!--
            --><span class="tag local-tag is-info is-light is-hidden">{{ i18n.lbl_change_to_global }}</span><!--
            --><span class="tag has-background-grey-lighter">&nbsp;</span>
        {% else %}
            <span class="tag global-tag is-hidden">{{ i18n.lbl_change_to_local }}</span><!--
            --><span class="tag local-tag is-info is-light">{{ i18n.lbl_change_to_global }}</span><!--
            --><span class="tag has-background-info">&nbsp;</span>
        {% endif %}
        <input type="checkbox" name="isbnissn-local" class="localization-checkbox" hidden {% if isLocalized %} checked {% endif %}>
    </div>
    {% endif %}
</div>
<!-- GLOBAL -->
<div class="columns field-isbnissn global
     {% if isLocalized %}
         is-hidden
     {% endif %}
     ">
    <div class="column">
        <div class="field">
            <div class="control">
                <input id="isbn_issn_global" name="isbn_issn_global" class="input" type="text"
                       autocomplete="off" placeholder="{{ i18n.lbl_isbnissn_placeholder }}"
                       value="{{ resourceGlobal.isbn_issn }}">
            </div>
        </div>
    </div>
</div>
            
            
            
<!-- LOCAL -->
<div class="columns field-isbnissn local
     {% if resourceLocal.overwrite.isbn_issn is empty and resourceLocal.overwrite.isbn_issn|length < 1 %}
         is-hidden
     {% endif %}
     ">
    <div class="column">
        <div class="field">
            <div class="control">
                <input id="isbn_issn_local" name="isbn_issn_local" class="input" type="text"
                       autocomplete="off" placeholder="{{ i18n.lbl_isbnissn_placeholder }}"
                       value="{{ resourceLocal.overwrite.isbn_issn }}">
            </div>
        </div>
    </div>
</div>
