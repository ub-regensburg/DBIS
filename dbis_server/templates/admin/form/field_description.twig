{% if not resourceLocal.overwrite.description.de is empty and resourceLocal.overwrite.description.de|length > 0 or not resourceLocal.overwrite.description.en is empty and resourceLocal.overwrite.description.en|length > 0 %}
    {% set isLocalized = true %}
{% else %}
    {% set isLocalized = false %}
{% endif %}


<div class="level mb-2">
    <h3 class="title is-3 mb-2">{{ i18n.lbl_database_description }} *</h3>
    {%  if selectedOrganization.ubrId is not empty %}
    <div class="tags has-addons is-clickable is-unselectable localization-tag" data-id="field-description">
        {% if resourceLocal.overwrite.description.de is empty and resourceLocal.overwrite.description.de|length < 1 and resourceLocal.overwrite.description.en is empty and resourceLocal.overwrite.description.en|length < 1 %}
            <span class="tag global-tag">{{ i18n.lbl_change_to_local }}</span><!--
            --><span class="tag local-tag is-info is-light is-hidden">{{ i18n.lbl_change_to_global }}</span><!--
            --><span class="tag has-background-grey-lighter">&nbsp;</span>
        {% else %}
            <span class="tag global-tag is-hidden">{{ i18n.lbl_change_to_local }}</span><!--
            --><span class="tag local-tag is-info is-light">{{ i18n.lbl_change_to_global }}</span><!--
            --><span class="tag has-background-info">&nbsp;</span>
        {% endif %}
        <input type="checkbox" name="description-local" class="localization-checkbox" hidden {% if isLocalized %} checked {% endif %}>
    </div>
    {% endif %}
</div>

<!-- GLOBAL -->
<div class="columns field-description global c-translate
     {% if isLocalized %}
         is-hidden
     {% endif %}
     ">
    <div class="column is-45">
        <div class="field">
            <label class="label level-left">
                <span class="is-size-7 has-text-grey is-lowercase level-item">
                            {{ i18n.lbl_german }}
                </span>
            </label>
            <div class="control">
                <textarea id="description_global_de"
                       name="description_global_de"
                       rows=7
                       class="input textarea translate language--german global"
                       data-msg_required="{{ i18n.msg_required }}"
                       type="text"
                       autocomplete="off"
                       placeholder="{{ i18n.lbl_database_description_placeholder }}"
                       >{{ resourceGlobal.description.de }}</textarea>
            </div>
                {% if errors.description_de %}
                    <div class="err-required help is-danger is-size-6">{{ i18n.msg_required }}</div>
                {% endif %}
        </div>

    </div>
    <div class="column is-auto">
        <div class="is-flex h-100 is-flex-direction-column is-justify-content-space-evenly is-align-content-center is-align-items-center">
            <button class="level-item icon button is-text translate language--german global pl-5 pr-5">
                <i class="fas fa-language"></i><i class="ml-1 fas fa-arrow-right"></i>
            </button>
            <button class="icon button is-text translate language--english global pl-5 pr-5">
                <i class="fas fa-arrow-left"></i><i class="ml-1 fas fa-language"></i>
            </button>
        </div>
    </div>
    <div class="column is-45">
        <div class="field">
            <label class="label level-left">
                <span class="is-size-7 has-text-grey is-lowercase level-item">
                            {{ i18n.lbl_english }}
                </span>
            </label>
            <div class="control">
                <textarea id="description_global_en"
                       name="description_global_en"
                       rows=7
                       class="input textarea translate language--english global"
                       data-msg_required="{{ i18n.msg_required }}"
                       type="text"
                       autocomplete="off"
                       placeholder="{{ i18n.lbl_database_description_placeholder }}"
                       >{{ resourceGlobal.description.en }}</textarea>
            </div>
            {% if errors.description_en%}
                <div class="err-required help is-danger is-size-6">{{ i18n.msg_required }}</div>
            {% endif %}
        </div>
    </div>
</div>
            
            
            
