<div id="country-filter" 
    class="select is-multiple w-100">
    
    {% if not no_tags %}
        <div id="resource-type-tags" class="tags is-fullwidth mt-2"></div>
    {% endif %}
    
    <input class="input jsonly search-field"
           placeholder="{{ i18n.lbl_search }}" aria-label="{{ i18n.aria_search_countries }}"/>
    
    <select name="filter-countries[]" 
            id="country-selection" 
            class="is-small is-fullwidth"
            multiple aria-label="{{ i18n.aria_select_countries }}">
        {% for country in countries %}
            <option value="{{ country.title }}"
                {% if country.title in filteredCountries %}selected="true"{% endif %}>
                {{ country.title }}
            </option>
        {% endfor %}
    </select>
    
    {% if not no_apply %}
        <button class="button is-outlined is-fullwidth mt-4">
            {{ i18n.apply_filter }}
        </button>
    {% endif %}
</div>