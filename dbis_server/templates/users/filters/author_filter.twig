<div id="author-filter" 
    class="select is-multiple w-100">
    
    {% if not no_tags %}
        <div id="resource-type-tags" class="tags is-fullwidth mt-2"></div>
    {% endif %}
    
    <input class="input jsonly search-field"
           placeholder="{{ i18n.lbl_search }}" aria-label="{{ i18n.aria_search_authors }}"/>
    
    <select name="author-text[]" 
            id="author-selection" 
            class="is-small is-fullwidth"
            multiple aria-label="{{ i18n.aria_select_authors }}">
        {% for author in authors %}
            <option value="{{ author.title }}"
                {% if author.title in filteredAuthor %}selected="true"{% endif %}>
                {{ author.title }}
            </option>
        {% endfor %}
    </select>
    
    {% if not no_apply %}
        <button class="button is-outlined is-fullwidth mt-4">
            {{ i18n.apply_filter }}
        </button>
    {% endif %}
</div>