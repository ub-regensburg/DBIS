<div>
    <div id="keyword-filter">
        {{ include('users/filters/components/autocomplete-filter-component.twig', {namespace: 'keyword', no_tags: no_tags, no_apply: no_apply}) }}
    </div>
    <div id="keyword-selection" class="is-flex is-flex-wrap-wrap mt-2">
        {% for filtered_keyword in filteredKeywords %}
        <div id="tag-{{ filtered_keyword.id }}" class="tags has-addons is-align-items-flex-start mr-2">
            <span class="tag">{{ filtered_keyword.title }}</span>
            <a class="tag is-delete"></a>
            <input type="hidden" value="{{ filtered_keyword.title }}" name="filter-keywords[]" aria-hidden="true" />
        </div>
        {% endfor %}
    </div>
</div>
